<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"         
             xmlns:fRating="clr-namespace:Rating;assembly=Rating"        
             x:Class="AvaliationSignature.MainPage">

    <StackLayout>
        <Label Text="Avaliação do Cliente" TextColor="Black" FontSize="20" HorizontalTextAlignment="Center" Margin="10,0,0,0"/>

        <fRating:RatingBar SelectedStarValue="0"
                           ImageHeight="30"
                           ImageWidth="30"
                           HorizontalOptions="Center"
                           FlowDirection="LeftToRight"
                           EmptyStarImage="star_empty"
                           FillStarImage="star_fill"/>

        <Button Clicked="Button_Clicked" Text="abrir assinatura"></Button>
        
    </StackLayout>
</ContentPage>
